{
  "name": "my-brand-server",
  "version": "1.0.0",
  "description": "My brand project server using ExpressJs, MongoDB, JWT and Joi for validation",
  "main": "src/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "start": "npm run build && node lib/index.js",
    "dev": "nodemon -r dotenv/config src/index.js",
    "test": "mocha --timeout 5000 -r dotenv/config test/ dotenv_config_path=config/.env --exit",
    "coverage": "DEBUG=true nyc npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/niyojuste/my-brand-server.git"
  },
  "keywords": [
    "Express",
    "MongoDB",
    "JWT",
    "Joi"
  ],
  "author": "Juste Niyonteze",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/niyojuste/my-brand-server/issues"
  },
  "homepage": "https://github.com/niyojuste/my-brand-server#readme",
  "dependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "bcrypt": "^5.0.1",
    "cloudinary": "^1.28.1",
    "core-js": "^3.21.0",
    "express": "^4.17.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.8",
    "mongoose-to-swagger": "^1.4.0",
    "mongoose-unique-validator": "^3.0.0",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "dotenv": "^14.3.2",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0"
  }
}
